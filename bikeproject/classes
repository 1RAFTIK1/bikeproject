package bikeproject;

public class BikeDriver {
   public BikeDriver() {
   }

   public static void main(String[] var0) {
      RoadBike var1 = new RoadBike();
      RoadBike var2 = new RoadBike("drop", "tourer", "semi-grip", "comfort", 14, 25, 18);
      MountainBike var3 = new MountainBike();
      Bike var4 = new Bike();
      var1.setPostHeight(20);
      var1.printDescription();
      var2.printDescription();
      var3.printDescription();
      var4.printDescription();
   }
}
//BikeParts
package bikeproject;

public interface BikeParts {
   String MAKE = "Oracle Cycles";

   void printDescription();
}

//MountainBike.class
package bikeproject;

public class MountainBike extends Bike implements MountainParts {
   private String suspension;
   private String type;
   private int frameSize;

   public MountainBike() {
      this("Bull Horn", "Hardtail", "Maxxis", "dropper", 27, "RockShox XC32", "Pro", 19);
   }

   public MountainBike(String var1, String var2, String var3, String var4, int var5, String var6, String var7, int var8) {
      super(var1, var2, var3, var4, var5);
      this.suspension = var6;
      this.type = var7;
      this.frameSize = var8;
   }

   public String getSuspension() {
      return this.suspension;
   }

   public void setSuspension(String var1) {
      this.suspension = var1;
   }

   public String getType() {
      return this.type;
   }

   public void setType(String var1) {
      this.type = var1;
   }

   public void printDescription() {
      super.printDescription();
      System.out.println("This mountain bike is a " + this.type + " bike and has a " + this.suspension + " suspension and a frame size of " + this.frameSize + " inches.");
   }
}
